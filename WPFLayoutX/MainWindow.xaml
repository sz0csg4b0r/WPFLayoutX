<Window
    x:Class="WPFLayoutX.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WPFLayoutX"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <TabControl>
        <TabItem Header="WrapPanel elrendezés">
            <WrapPanel>
                <Button
                    x:Name="wrapPanelBtn"
                    Width="300"
                    Height="100"
                    Background="MidnightBlue"
                    Content="Ez egy gomb"
                    FontSize="22"
                    Foreground="White" />
                <TextBlock
                    Margin="50,0,0,0"
                    FontSize="22"
                    Text="Ez itt egy random szöveg 22-es betűmérettel" />
                <TextBlock
                    Margin="50,0,0,0"
                    Background="Tomato"
                    FontSize="30"
                    Text="Ez itt egy másik random szöveg 30-as betűmérettel" />
                <Button
                    x:Name="wrapPanelBtn2"
                    Height="100"
                    Background="MidnightBlue"
                    Content="Ez egy gomb szélesség nélkül"
                    FontSize="22"
                    Foreground="White" />
            </WrapPanel>
        </TabItem>
        <TabItem Header="StackPanel elrendezés">
            <StackPanel>
                <Button Width="200" Content="Gomb magaság értékkel" Background="Gold" Height="100"></Button>
                <TextBlock Text="Ez egy hosszú szöveg, amely nagyon rövid is lehetne de inkább hosszú szeretett volna lenni" FontSize="30" TextWrapping="Wrap"></TextBlock>
                <Button Height="100" FontSize="20">Gomb szélesség nélkül</Button>

            </StackPanel>
        </TabItem>
        <TabItem Header="DockPanel elrendezés">
            <DockPanel>
                <TextBlock FontSize="22" Text="Ez egy header szöveg" Background="Pink" 
                           DockPanel.Dock="Top" ></TextBlock>
                <TextBlock 
                    FontSize="22" 
                    Text="Ez egy footer szöveg" 
                    Background="MintCream" 
                    DockPanel.Dock="Bottom">
                </TextBlock>
                <ListView DockPanel.Dock="Left" Width="180">
                    <ListViewItem>
                        <Image Source="https://cdn.pixabay.com/photo/2015/03/04/12/59/bells-flower-658751_1280.jpg" Width="160" ></Image>
                    </ListViewItem>
                </ListView>
                <ListBox FontSize="24" Background="Goldenrod" DockPanel.Dock="Right">
                    <ListBoxItem Background="Yellow">Alma</ListBoxItem>
                    <ListBoxItem Background="Blue">Körte</ListBoxItem>
                    <ListBoxItem Background="Green">Krumpli</ListBoxItem>
                    <ListBoxItem Background="Red">Kazán</ListBoxItem>
                    <ListBoxItem Background="Pink">Tégla</ListBoxItem>
                </ListBox>

            </DockPanel>
        </TabItem>
        <TabItem Header=" Grid elrendezés">
            <Grid ShowGridLines="True">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*"></ColumnDefinition>
                    <ColumnDefinition Width="2*"></ColumnDefinition>
                    <ColumnDefinition Width="1*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="2*"></RowDefinition>
                    <RowDefinition Height="1*"></RowDefinition>
                    <RowDefinition Height="4*"></RowDefinition>
                    <RowDefinition Height="1*"></RowDefinition>
                    <RowDefinition Height="2*"></RowDefinition>


                </Grid.RowDefinitions>
                <Button 
                    Grid.Column="2"
                    Grid.Row="2"
                    Background="MidnightBlue" Foreground="White" Content="Ez egy gomb"></Button>
                <TextBox Text="Ide írhatsz szöveget"></TextBox>

            </Grid>

        </TabItem>
        <TabItem Header="Canvas elrendezés">
            <Canvas Background="White">
                <Ellipse Width="200" Height="200"
         Fill="Goldenrod"
            Canvas.Left="297"
            Canvas.Top="49" HorizontalAlignment="Center" VerticalAlignment="Top"
         ></Ellipse>
                <Rectangle Width="274"
                           RadiusX="50"
                           RadiusY="50"
                           Height="326" 
                           Fill="MidnightBlue"
                           Canvas.Left="77"
                           Canvas.Top="49" RenderTransformOrigin="0.5,0.5" HorizontalAlignment="Center" VerticalAlignment="Top"
                           >
                    <Rectangle.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform/>
                            <RotateTransform Angle="88.273"/>
                            <TranslateTransform/>
                        </TransformGroup>
                    </Rectangle.RenderTransform>

                </Rectangle>
                <Rectangle Width="100"
                           Height="100"
                           Canvas.Right="20"
                           Canvas.Bottom="20"
                           Fill="DarkCyan"
                           >
                </Rectangle>
            </Canvas>
        </TabItem>
        <TabItem Header="UniformGrid elrendezés">
            <UniformGrid Columns="5" Rows="3">
                <Button>1</Button>
                <Button>2</Button>
                <Button>3</Button>
                <Button>4</Button>

                <Button>5</Button>
                <Button>6</Button>
                <Button>7</Button>
                <Button>8</Button>
                <TextBlock>asdfasfasd</TextBlock>

            </UniformGrid>
        </TabItem>

    </TabControl>
</Window>
