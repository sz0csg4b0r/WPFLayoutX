<Window
    x:Class="WPFLayoutX.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WPFLayoutX"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <TabControl>
        <TabItem Header="WrapPanel elrendezés">
            <WrapPanel>
                <Button
                    x:Name="wrapPanelBtn"
                    Width="300"
                    Height="100"
                    Background="MidnightBlue"
                    Content="Ez egy gomb"
                    FontSize="22"
                    Foreground="White" />
                <TextBlock
                    Margin="50,0,0,0"
                    FontSize="22"
                    Text="Ez itt egy random szöveg 22-es betűmérettel" />
                <TextBlock
                    Margin="50,0,0,0"
                    Background="Tomato"
                    FontSize="30"
                    Text="Ez itt egy másik random szöveg 30-as betűmérettel" />
                <Button
                    x:Name="wrapPanelBtn2"
                    Height="100"
                    Background="MidnightBlue"
                    Content="Ez egy gomb szélesség nélkül"
                    FontSize="22"
                    Foreground="White" />
            </WrapPanel>
        </TabItem>
    </TabControl>
</Window>
